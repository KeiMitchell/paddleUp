
!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title PaddleUp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body

  %header.header
    .header__logo
      = link_to root_path, class: "header__logo--link" do
        paddleUp


    - if user_signed_in?
      .header__btn
        = link_to '船を登録する', new_boat_path
      .header__user
        %ul.header__user--info
          %li
            = current_user.nickname
          %li
            = link_to 'マイページ', "/users/#{current_user.id}"
          %li
            = link_to 'ログアウト', destroy_user_session_path, method: :delete
    - else
      .header__user
        %ul.header__user--info
          %li
            = link_to 'ログイン', new_user_session_path, class: 'header__user--login'
          %li
            = link_to '新規登録', new_user_registration_path, class: 'header__user--signup'
        
  .content
    = yield

  %footer.footer
    .footer__share
      %p find us on
      = link_to root_path, class: "footer__share--link" do
        Facebook
      %br/
      = link_to root_path, class: "footer__share--link" do
        Twitter


