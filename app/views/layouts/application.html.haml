
!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title PaddleUp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body

  %header.header
    .header__logo
      = link_to root_path, class: "header__logo--link" do
        paddleUp


    - if user_signed_in?
      .header__btn
        = link_to '船を登録する', new_boat_path
      .header__user
        %ul.header__user--info
          %li
            = current_user.nickname
          %li
            = link_to 'マイページ', "/users/#{current_user.id}"
          %li
            = link_to 'ログアウト', destroy_user_session_path, method: :delete
    - else
      .header__user
        %ul.header__user--info
          %li
            = link_to 'ログイン', new_user_session_path, class: 'header__user--login'
          %li
            = link_to '新規登録', new_user_registration_path, class: 'header__user--signup'
        
  .content
    = yield

  %footer.footer
    .footer
      .footer__message
        find us on
      .footer__icons
        .footer__icons--facebook
          = link_to "https://www.facebook.com/" do
            = icon('fab', 'facebook-square')
        .footer__icons--twitter
          = link_to "https://twitter.com/" do
            = icon('fab', 'twitter')
        .footer__icons--youtube
          = link_to "https://www.youtube.com/results?search_query=footer+sns+html+css" do
            = icon('fab', 'youtube')
        .footer__icons--instagram
          = link_to "https://www.instagram.com/k_mitchell611/" do
            = icon('fab', 'instagram')
          



